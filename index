    <script>
        let analysisCount = 0;
        let winCount = 0;

        function predictTaiXiu() {
            const md5Input = document.getElementById('md5Input').value.trim();
            const resultSection = document.getElementById('resultSection');
            const predictionResult = document.getElementById('predictionResult');

            if (!md5Input) {
                alert('Nh·∫≠p M√£ MD5');
                return;
            }

            if (md5Input.length !== 32 || !/^[a-fA-F0-9]{32}$/.test(md5Input)) {
                alert('M√£ MD5 Kh√¥ng H·ª£p L·ªá!.Vui L√≤ng Nh·∫≠p ƒê√∫ng ');
                return;
            }

            // Hi·ªÉn th·ªã loading
            predictionResult.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>ƒêang Ph√¢n T√≠ch M√£ MD5</p>
                    <p>D·ª± ƒêo√°n TX Ch√≠nh X√°c Nh·∫•t </p>
                </div>
            `;
            resultSection.style.display = 'block';

            // Gi·∫£ l·∫≠p th·ªùi gian ph√¢n t√≠ch
            setTimeout(() => {
                generateTaiXiuPrediction(md5Input);
            }, 2500);
        }

        function generateTaiXiuPrediction(md5Hash) {
            analysisCount++;
            
            // T·∫°o k·∫øt qu·∫£ d·ª±a tr√™n MD5 (th·ª±c t·∫ø l√† ng·∫´u nhi√™n nh∆∞ng c√≥ v·∫ª logic)
            const lastChar = md5Hash[md5Hash.length - 1].toLowerCase();
            const isTai = parseInt(lastChar, 16) >= 8; // 50% c∆° h·ªôi
            const confidence = Math.floor(Math.random() * 30) + 70; // 70-99%
            const taiProbability = isTai ? confidence : 100 - confidence;
            const xiuProbability = 100 - taiProbability;
            
            // C·∫≠p nh·∫≠t th·ªëng k√™ th·∫Øng (ng·∫´u nhi√™n ƒë·ªÉ tƒÉng t√≠nh thuy·∫øt ph·ª•c)
            if (Math.random() > 0.3) winCount++;
            
            const winRate = Math.round((winCount / analysisCount) * 100);
            const luckyNumber = parseInt(md5Hash.substring(0, 2), 16) % 100;

            let resultHTML = '';
            
            if (isTai) {
                resultHTML = `
                    <div class="prediction-result tai-result">
                        <div style="font-size: 2em;">K·∫æT QU·∫¢</div>
                        <div class="result-text tai-text">X·ªâu</div>
                        <div class="confidence">ƒê·ªô Tin C·∫≠y <strong>${confidence}%</strong></div>
                        <div class="probability">T·ªâ l·ªá T√†i: ${taiProbability}% | T·ªâ l·ªá X·ªâu: ${xiuProbability}%</div>
                        <div style="margin-top: 15px; font-size: 1.1em;">
                            D·ª± ƒêo√°n: <strong>N√™n Ch·ªçn X·ªâu </strong> 
                        </div>
                    </div>
                `;
            } else {
                resultHTML = `
                    <div class="prediction-result xiu-result">
                        <div style="font-size: 2em;">K·∫æT QU·∫¢</div>
                        <div class="result-text xiu-text"> T√†i </div>
                        <div class="confidence">ƒê·ªò TIN C·∫¨Y<strong>${confidence}%</strong></div>
                        <div class="probability">T·ªâ l·ªá T√†i: ${taiProbability}% | T·ªâ l·ªá X·ªâu: ${xiuProbability}%</div>
                        <div style="margin-top: 15px; font-size: 1.1em;">
                           D·ª± ƒêo√°n<strong>N√™n Ch·ªçn T√†i</strong> - 
                        </div>
                    </div>
                `;
            }

            // C·∫≠p nh·∫≠t th·ªëng k√™
            document.getElementById('accuracy').textContent = confidence + '%';
            document.getElementById('analysisCount').textContent = analysisCount;
            document.getElementById('winRate').textContent = winRate + '%';
            document.getElementById('luckyNumber').textContent = luckyNumber;

            predictionResult.innerHTML = resultHTML;

            // Hi·ªáu ·ª©ng confetti ·∫£o
            setTimeout(() => {
                if (confidence > 85) {
                    alert(` D·ª± ƒêo√°n Tin C·∫¨Y R·∫•t Cao  (${confidence}%)!`);
                }
            }, 500);
        }

        // Enter ƒë·ªÉ ph√¢n t√≠ch
        document.getElementById('md5Input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                predictTaiXiu();
            }
        });

        // Hi·ªáu ·ª©ng placeholder
        const md5Input = document.getElementById('md5Input');
        const placeholders = [
            "5d41402abc4b2a76b9719d911017c592",
            "098f6bcd4621d373cade4e832627b4f6", 
            "7c6a180b36896a0a8c02787eeafb0e4c",
            "25d55ad283aa400af464c76d713c07ad"
        ];
        let currentPlaceholder = 0;

        setInterval(() => {
            md5Input.placeholder = placeholders[currentPlaceholder] + " (nh·∫≠p m√£ MD5 c·ªßa b·∫°n...)";
            currentPlaceholder = (currentPlaceholder + 1) % placeholders.length;
        }, 3000);

        // Kh·ªüi t·∫°o
        document.getElementById('resultSection').style.display = 'none';
    </script>
